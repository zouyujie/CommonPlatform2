@{
    ViewBag.Title = "单位列表";
    ViewBag.ParentTitle = "系统管理";
    Layout = "~/Views/Shared/_Page.cshtml";
}

<style type="text/css">
    .divModal {
        width: 700px;
    }
</style>
<div class="page-content-body">


    <form role="form" class="form-inline">
        <div class="form-group">
            <label class="control-label">单位名称：</label>
            <input type="text" class="form-control input-inline" placeholder="搜索单位名称">
        </div>
        <div class="form-group">
            <label class="control-label">
                单位性质：
            </label>
            <select class="form-control">
                <option value="">请选择</option>
                <option value="">商超</option>
                <option value="">医院</option>
                <option value="">机场</option>
            </select>
        </div>
        <div class="form-group">
            <label class="control-label">
                所属区域：
            </label>
            <select class="form-control">
                <option value="">请选择</option>
                <option value="">全国</option>
                <option value="">广东</option>
                <option value="">上海</option>
            </select>
        </div>
        <div class="form-group">
            <button id="btnSearch" class="btn sbold green" onclick="DataTablesObj.reloadList();">查询<i class="fa fa-search"></i></button>
            <button id="btnAdd" class="btn sbold green" onclick="DataTablesObj.doCreateModal('/Admin/BaseInfo/UnitCreate')" data-toggle="modal">添加<i class="fa fa-plus"></i></button>
        </div>
    </form>

    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="table_local"></table>
            </div>
            <!--模态弹窗-->
            <div class="modal fade" id="defaultModal" tabindex="-1" role="dialog" aria-labelledby="defaultModalLabel" aria-hidden="true">
                <div class="modal-dialog divModal" role="document">
                    <div class="modal-content">
                    </div>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
</div>
@section scripts
{
    <script src="@Html.ScriptsPath("lib/printThis.js")"></script>
}


