@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="/Home">设备维保</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <span>报修列表</span>
            </li>
        </ul>
    </div>
    <!-- BEGIN CONTAINER -->
    <div class="page-content-body">
        <div class="row">
            <div class="col-md-12">
                <div class="m-heading-1 border-green m-bordered">
                    <h3>Twitter Bootstrap Wizard Plugin</h3>
                    <p>
                      插件使用
                    </p>
                </div>
                <div class="portlet light " id="form_wizard_1">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-layers font-red"></i>
                            <span class="caption-subject font-red bold uppercase">
                                报修流程 -
                                <span class="step-title"> 1/4 </span>
                            </span>
                        </div>
                        <div class="actions">
                            <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                                <i class="icon-cloud-upload"></i>
                            </a>
                            <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                                <i class="icon-wrench"></i>
                            </a>
                            <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                                <i class="icon-trash"></i>
                            </a>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <form class="form-horizontal" action="#" id="submit_form" method="POST">
                            <div class="form-wizard">
                                <div class="form-body">
                                    <ul class="nav nav-pills nav-justified steps">
                                        <li>
                                            <a href="#tab1" data-toggle="tab" class="step">
                                                <span class="number"> 01 </span>
                                                <span class="desc">
                                                    <i class="fa fa-check"></i> 待受理
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#tab2" data-toggle="tab" class="step">
                                                <span class="number"> 02 </span>
                                                <span class="desc">
                                                    <i class="fa fa-check"></i> 待派工
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#tab3" data-toggle="tab" class="step active">
                                                <span class="number"> 03 </span>
                                                <span class="desc">
                                                    <i class="fa fa-check"></i> 待接受任务
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#tab4" data-toggle="tab" class="step">
                                                <span class="number"> 04 </span>
                                                <span class="desc">
                                                    <i class="fa fa-check"></i> 待完工
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                    <div id="bar" class="progress progress-striped" role="progressbar">
                                        <div class="progress-bar progress-bar-success"> </div>
                                    </div>
                                    <div class="tab-content">
                                        <div class="alert alert-danger display-none">
                                            <button class="close" data-dismiss="alert"></button> 有错误，请检查
                                        </div>
                                        <div class="alert alert-success display-none">
                                            <button class="close" data-dismiss="alert"></button> 验证通过!
                                        </div>
                                        <div class="tab-pane active" id="tab1">
                                            <h3 class="block">输入姓名</h3>
                                            <div class="form-group">
                                                <label class="control-label col-md-3">
                                                    用户名
                                                    <span class="required"> * </span>
                                                </label>
                                                <div class="col-md-4">
                                                    <input type="text" class="form-control" name="username"  placeholder="请输入用户名"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane" id="tab2">
                                            <h3 class="block">输入电话</h3>
                                            <div class="form-group">
                                                <label class="control-label col-md-3">
                                                    电话
                                                    <span class="required"> * </span>
                                                </label>
                                                <div class="col-md-4">
                                                    <input type="text" class="form-control" name="phone"  placeholder="请输入电话号码"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane" id="tab3">
                                            <h3 class="block">输入信用卡</h3>
                                            <div class="form-group">
                                                <label class="control-label col-md-3">
                                                    信用卡
                                                    <span class="required"> * </span>
                                                </label>
                                                <div class="col-md-4">
                                                    <input type="text" class="form-control" name="card_name"  placeholder="请输入信用卡"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane" id="tab4">
                                            <h3 class="block">确认信息</h3>
                                            <h4 class="form-section">账户</h4>
                                            <div class="form-group">
                                                <label class="control-label col-md-3">用户名:</label>
                                                <div class="col-md-4">
                                                    <p class="form-control-static" data-display="username"> </p>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3">电话:</label>
                                                <div class="col-md-4">
                                                    <p class="form-control-static" data-display="phone"> </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <a href="javascript:;" class="btn default button-previous">
                                                <i class="fa fa-angle-left"></i> 返回
                                            </a>
                                            <a href="javascript:;" class="btn btn-outline green button-next">
                                                下一步
                                                <i class="fa fa-angle-right"></i>
                                            </a>
                                            <a href="javascript:;" class="btn green button-submit">
                                                保存
                                                <i class="fa fa-check"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
<script src="~/Content/js/lib/bootstrap-wizard/jquery.bootstrap.wizard.min.js"></script>
}

