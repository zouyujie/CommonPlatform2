@{
    ViewBag.Title = "登录";
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta http-equiv="content-language" content="zh-CN" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emx 365 能管平台</title>
    <link href="~/content/css/login-font.css" rel="stylesheet" />
    <link href="~/content/css/framework-login.css" rel="stylesheet" />
    <link rel="shortcut icon" href="favicon.ico" />
</head>
<body>
    <div class="wrapper">
        <div class="container">
            <div class="logo">
                @*<i class="fa fa-modx"></i>*@
                <img src="~/content/img/home/Logo48.png" style="float:left;" />
                <h1><span>Emx 365</span> 能管平台</h1>
            </div>
            @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <input id="txt_account" type="text" placeholder="用户名">
                    <i class="fa fa-user"></i>
                </div>
                <div class="row">
                    <input id="txt_password" type="password" placeholder="登录密码">
                    <i class="fa fa-key"></i>
                </div>
                <div class="row">
                    <input id="txt_code" maxlength="4" type="text" placeholder="验证码" style="width: 190px; float: left;">
                    <div style="width: 110px; float: right; padding-top: 14px; padding-left: 14px;">
                        看不清？<a id="switchCode" href="javascript:void();" style="text-decoration: none;">换一张</a>
                        <img id="imgcode" class="authcode" src="~/Home/GetAuthCode" width="80" height="25" />
                    </div>
                </div>
                <div class="row">
                    <button id="login_button" type="button"><span>登录</span></button>
                </div>
                <div class="row">
                </div>
            }
            <div class="login_tips"></div>
        </div>
        <ul class="bg-bubbles">
            <li></li>
        </ul>
    </div>
    <div class="copyright">
        <a href="http://www.cnsecom.com/" style="text-decoration:none;color:#fff;"><span id="spnYear"></span>  © 紫衡技术 </a>
    </div>
    <script> document.getElementById("spnYear").innerHTML = new Date().getFullYear()</script>
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/lib/jquery.cookie.js"></script>
    <script src="~/Content/js/lib/jquery.md5.js"></script>
    <script src="~/Content/js/views/login.js"></script>
</body>
</html>
