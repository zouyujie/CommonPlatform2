@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Form.cshtml";
    List<RepairOrder> _RepairOrder = ViewBag.RepairOrder as List<RepairOrder>;
}
@using Secom.Smp.ViewModel.Home;
<div class="page-content-body" style="margin-top:10px;">
    <div class="row">
        <div class="col-md-3 col-lg-2">
            <div class="portlet box grey-salt">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>基本信息
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse" data-original-title="" title="展开/折叠"> </a>
                        <a href="" class="fullscreen" data-original-title="" title="全屏"> </a>
                    </div>
                </div>
                <div class="portlet-body" style="display: block;height:260px;">
                    <img src="@ViewBag.InfoImg" class="img-responsive img-rounded" />
                </div>
            </div>
            <div class="portlet box grey-steel">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>简介
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse" data-original-title="" title="展开/折叠"> </a>
                        <a href="" class="fullscreen" data-original-title="" title="全屏"> </a>
                    </div>
                </div>
                <div class="portlet-body" style="display: block;">
                   @Html.Raw(ViewBag.Introduction)
                </div>
            </div>
        </div>
        <div class="col-md-9 col-lg-10">
            <div class="portlet box grey-cararra">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>运维管理
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse" data-original-title="" title="展开/折叠"> </a>
                        <a href="" class="fullscreen" data-original-title="" title="全屏"> </a>
                    </div>
                </div>
                <div class="portlet-body" style="display: block;min-height:260px;">
                    <div class="col-md-4">
                        <div id="repairTotal" style="width:100%;height:160px;"></div>
                        <div class="totalPad">
                            <div class="head">维修统计</div>
                            <div class="done repair"><span>已完成：</span> @_RepairOrder[0].RepairFinish 单</div>
                            <div class="noDone"><span>未完成：</span>@_RepairOrder[0].RepairNoFinish 单</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div id="visitTotal" style="width:100%;height:160px;"></div>
                        <div class="totalPad">
                            <div class="head">巡检统计</div>
                            <div class="done visit"><span>已完成：</span>@_RepairOrder[1].RepairFinish 单</div>
                            <div class="noDone"><span>未完成：</span>@_RepairOrder[1].RepairNoFinish 单</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div id="maintainTotal" style="width:100%;height:160px;"></div>
                        <div class="totalPad">
                            <div class="head">保养统计</div>
                            <div class="done maintain"><span>已完成：</span>@_RepairOrder[2].RepairFinish 单</div>
                            <div class="noDone"><span>未完成：</span>@_RepairOrder[2].RepairNoFinish 单</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="portlet box grey-salsa">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>安全管理
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse" data-original-title="" title="展开/折叠"> </a>
                        <a href="" class="fullscreen" data-original-title="" title="全屏"> </a>
                    </div>
                </div>
                <div class="portlet-body" style="display: block;min-height:400px; height:400px;">
                    <div class="col-md-6">
                        <div class="panel-heading">
                            <h3 class="panel-title">暖通空调</h3>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-hover table-checkable order-column" id="table_airCondition"></table>
                        </div>
                    </div>
                    <div class="panel col-md-6">
                        <div class="panel-heading">
                            <h3 class="panel-title">公共照明</h3>
                        </div>
                        <div class="panel-body">
                            <div class="dataTables_wrapper no-footer">
                                <div class="table-scrollable">
                                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="table_illumination">
                                        <thead><tr role="row"><th>名称</th><th>一号楼</th><th>二号楼</th><th>三号楼</th><th>四号楼</th></tr></thead>
                                        <tbody>
                                            <tr role="row" style="height:76px;"><td>支路数</td><td></td><td></td><td></td><td></td></tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="panel-heading">
                            <h3 class="panel-title">变配电</h3>
                        </div>
                        <div class="panel-body"> <table class="table table-striped table-bordered table-hover table-checkable order-column" id="table_transformer"></table>  </div>
                    </div>
                    <div class="col-md-6">
                        <div class="panel-heading">
                            <h3 class="panel-title">医用冷链</h3>
                        </div>
                        <div class="panel-body"> <table class="table table-striped table-bordered table-hover table-checkable order-column" id="table_coldChains"></table>  </div>
                    </div>
                </div>
            </div>
            <div class="portlet box grey-salsa">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>能耗统计
                    </div>
                    <div class="tools">
                        <button id="btnElectricity" type="button" class="btn btn-info btn-sm mt-ladda-btn ladda-button btn-circle" data-style="expand-right" data-size="s">
                            <span class="ladda-label">电耗</span>
                            <span class="ladda-spinner"></span>
                        </button>
                        <button id="btnWater" type="button" class="btn btn-info btn-sm mt-ladda-btn ladda-button btn-circle" data-style="expand-right" data-size="s">
                            <span class="ladda-label">水耗</span>
                            <span class="ladda-spinner"></span>
                        </button>
                        <button id="btnAir" type="button" class="btn btn-info btn-sm mt-ladda-btn ladda-button btn-circle" data-style="expand-right" data-size="s">
                            <span class="ladda-label">气耗</span>
                            <span class="ladda-spinner"></span>
                        </button>
                        <a href="javascript:;" class="collapse" data-original-title="" title="展开/折叠"> </a>
                        <a href="" class="fullscreen" data-original-title="" title="全屏"> </a>
                    </div>
                </div>
                <div class="portlet-body" style="display: block;min-height:260px;">
                    <div class="col-md-6">
                        <div id="monthEC" style="width:100%;height:160px;"></div>
                    </div>
                    <div class="col-md-6">
                        <div id="yearEC" style="width:100%;height:160px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
}
